<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <li>
        <%= link_to "Bookers", root_path %>
      </li>
      <li>
        <%= link_to user_path(current_user.id) do %><i class="fas fa-home"></i>Home<% end %>
      </li>
      <li>
        <%= link_to users_path do %><i class="fas fa-users"></i>Users<% end %>
      </li>
      <li>
        <%= link_to books_path do %><i class="fas fa-book-open"></i>Books<% end %>
      </li>
      <li>
        <%= link_to destroy_user_session_path, method: :delete do %><i class="fas fa-sign-out-alt"></i>logout<% end %>
      </li>
      <li>
        <%= link_to "Newbook", new_book_path %>
      </li>
    <% else %>
      <li>
        <%= link_to "Bookers", root_path %>
      </li>
      <li>
        <%= link_to root_path do %><i class="fas fa-home"></i>Home<% end %>
      </li>
      <li>
        <%= link_to home_about_path do %><i class="fas fa-link"></i>About<% end %>
      </li>
      <li>
        <%= link_to new_user_registration_path, method: :get do %><i class="fas fa-user-plus"></i>sign up<% end %>
      </li>
      <li>
        <%= link_to new_user_session_path  do %><i class="fas fa-sign-in-alt"></i>login<% end %>
      </li>
    <% end %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
