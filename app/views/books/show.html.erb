<h1>Book detail</h1>
<div>
  <p>User image:<%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format:'jpeg', fallback: "no_image.jpg" %></p>
  <p>User name:<%= link_to @book.user.name, user_path(@book.user.id) %></p>
  <p>Title:<%= @book.title %></p>
  <p>Opinion:<%= @book.body %></p>
  <% if @book.user.id == current_user.id %>
    <p>Edit:<%= link_to "Edit", edit_book_path(@book.id) %></p>
    <p><%= link_to "Destroy", book_path(@book.id), method: :delete, data: { confirm: "Are you sure?" } %></p>
  <% end %>
</div>