<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User Info</h2>
      <div id="error_excplanation">
        <% if @user.errors.any? %>
          <h3><%= @user.errors.count %> error prohibited this obj from beign saved:</h3>
          <ul><% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %></ul>
        <% end %>
      </div>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name, class: 'form-control', autofocus: true, id: "user_name", placeholder: "name" %>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label>
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %>
          <%= f.attachment_field :profile_image, class: "form-control-file", id: "user_profile_image"  %>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <%= f.text_area :introduction, class: 'form-control', id: "user_introduction", placeholder: "introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update User', class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>